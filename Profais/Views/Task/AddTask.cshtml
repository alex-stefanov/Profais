@using Profais.Services.ViewModels.Task;
@model AddTaskViewModel

@{
    ViewData["Title"] = "Task - Add";
}

<div class="container mt-4">
    <h2>
        @ViewData["Title"]
    </h2>

    <form asp-action="AddTask" asp-controller="Task" method="post">
        <div class="form-group">
            <label asp-for="Title" class="form-label" />
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger" />
        </div>

        <div class="form-group mt-3">
            <label asp-for="Description" class="form-label" />
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger" />
        </div>

        <div class="form-group mt-3">
            <label asp-for="ProjectId" class="form-label" />
            <input asp-for="ProjectId" readonly class="form-control" />
            <span asp-validation-for="ProjectId" class="text-danger" />
        </div>

        <button type="submit" class="btn btn-primary mt-3">
            Submit
        </button>
    </form>
</div>