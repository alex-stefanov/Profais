@using Profais.Services.ViewModels.SpecialistRequest;
@model SpecialistRequestViewModel;

@{
    ViewData["Title"] = "Specialist Request - Make";
}

<h2>
    @ViewData["Title"]
</h2>

<form asp-action="MakeSpecialistRequest" method="post">
    <div class="form-group">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" readonly class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" readonly class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProfixId" class="form-label"></label>
        <input asp-for="ProfixId" class="form-control" />
        <span asp-validation-for="ProfixId" class="text-danger"></span>
    </div>

    <div hidden class="form-group">
        <label asp-for="Status" class="form-label"></label>
        <input asp-for="Status" readonly class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">
            Submit
        </button>
    </div>
</form>