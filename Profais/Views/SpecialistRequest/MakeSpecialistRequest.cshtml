@using Profais.Services.ViewModels.SpecialistRequest;
@model MakeSpecialistRequestViewModel;

@{
    ViewData["Title"] = "Specialist Request - Make";
}

<div class="container mt-4">
    <h2>
        @ViewData["Title"]
    </h2>

    <form asp-action="MakeSpecialistRequest" asp-controller="SpecialistRequest" method="post">
        <div class="form-group">
            <input asp-for="UserId" hidden readonly class="form-control" />
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" readonly class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" readonly class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProfixId" class="form-label"></label>
            <input asp-for="ProfixId" class="form-control" />
            <span asp-validation-for="ProfixId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">
                Submit
            </button>
        </div>
    </form>
</div>