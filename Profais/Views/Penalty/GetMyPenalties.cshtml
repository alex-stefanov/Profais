@using Profais.Services.ViewModels.Shared;
@using Profais.Services.ViewModels.Penalty;
@model PagedResult<CollectionPenaltyViewModel>

@{
    ViewData["Title"] = "Penalty - Mine";
}

<h2>
    @ViewData["Title"]
</h2>

<div class="container mt-4">
    <div class="row">
        @foreach (CollectionPenaltyViewModel penalty in Model.Items)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            @penalty.Title
                        </h5>
                        <form asp-action="ViewPenalty" method="get">
                            <input type="hidden" name="penaltyId" value="@penalty.Id" />
                            <button type="submit" class="btn btn-primary">
                                View Penalty
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.HasPreviousPage ? "" : "hidden")">
                <a class="page-link" asp-action="GetMyPenalties" asp-route-pageNumber="@(Model.CurrentPage - 1)" asp-route-pageSize="9">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="GetMyPenalties" asp-route-pageNumber="@i" asp-route-pageSize="9">@i</a>
                </li>
            }
            <li class="page-item @(Model.HasNextPage ? "" : "hidden")">
                <a class="page-link" asp-action="GetMyPenalties" asp-route-pageNumber="@(Model.CurrentPage + 1)" asp-route-pageSize="9">Next</a>
            </li>
        </ul>
    </nav>
</div>