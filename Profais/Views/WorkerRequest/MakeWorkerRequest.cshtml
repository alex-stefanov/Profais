@using Profais.Services.ViewModels.WorkerRequest;
@model WorkerRequestViewModel;

@{
    ViewData["Title"] = "Make Request - Worker";
}

<h2>
    @ViewData["Title"]
</h2>

<form asp-action="MakeWorkerRequest" method="post">
    <div class="form-group">
        <label asp-for="FirstName">
           First Name
        </label>
        <input asp-for="FirstName" readonly class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName">
            Last Name
        </label>
        <input asp-for="LastName" readonly class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProfixId">
            Profix ID
        </label>
        <input asp-for="ProfixId" class="form-control" />
        <span asp-validation-for="ProfixId" class="text-danger"></span>
    </div>

    <div hidden class="form-group">
        <label asp-for="Status">
            Status
        </label>
        <input asp-for="Status" readonly class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">
            Submit
        </button>
    </div>
</form>