@using Profais.Services.ViewModels.ProjectRequest;
@model AddProjectRequestViewModel

@{
    ViewData["Title"] = "Project Request - Create";
}

<div class="container mt-4">
    <h2>
        @ViewData["Title"]
    </h2>

    <form asp-action="CreateProjectRequest" asp-controller="ProjectRequest" method="post">
        <input asp-for="ClientId" value="@Model.ClientId" hidden readonly class="form-control" />

        <div class="form-group">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClientNumber" class="form-label"></label>
            <input asp-for="ClientNumber" class="form-control" />
            <span asp-validation-for="ClientNumber" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">
            Submit Project Request
        </button>
    </form>
</div>