@using Profais.Services.ViewModels.ProjectRequest;
@using static Profais.Common.Enums.RequestStatus;
@model ProjectRequestViewModel

@{
    ViewData["Title"] = "Project Request - Details";
}

<div class="container mt-4">
    <h2>
        @ViewData["Title"]
    </h2>

    <form asp-action="ApproveProject" asp-controller="ProjectRequest" method="post">
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" readonly class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" readonly class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClientName" class="control-label"></label>
            <input asp-for="ClientName" readonly class="form-control" />
            <span asp-validation-for="ClientName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClientNumber" class="control-label"></label>
            <input asp-for="ClientNumber" readonly class="form-control" />
            <span asp-validation-for="ClientNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Status" class="control-label"></label>
            <select asp-for="Status" disabled class="form-control">
                <option value="@Model.Status">
                    @Model.Status
                </option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <input value="@Model.Id" hidden name="projectRequestId" />

        @if (Model.Status == Pending)
        {
            <button type="submit" class="btn btn-success">
                Approve
            </button>
        }
    </form>

    <form asp-action="DeclineProject" asp-controller="ProjectRequest" method="post">
        <input value="@Model.Id" hidden name="projectRequestId" />

        @if (Model.Status == Pending)
        {
            <button type="submit" class="btn btn-danger">
                Decline
            </button>
        }
    </form>
</div>