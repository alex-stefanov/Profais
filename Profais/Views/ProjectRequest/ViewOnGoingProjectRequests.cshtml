@using Profais.Services.ViewModels.Shared;
@using Profais.Services.ViewModels.ProjectRequest;
@model PagedResult<CollectionProjectRequestViewModel>

@{
    ViewData["Title"] = "Project Request - On Going";
}

<h2>
    @ViewData["Title"]
</h2>

<div class="container mt-4">
    <div class="row">
        @foreach (CollectionProjectRequestViewModel project in Model.Items)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            @project.Title
                        </h5>
                        <p class="card-text">
                            @project.ClientName
                        </p>
                        <form asp-action="ViewProjectRequest" method="get">
                            <input type="hidden" name="projectRequestId" value="@project.Id" />
                            <button type="submit" class="btn btn-primary">
                                View Project
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <nav>
        <ul class="pagination justify-content-center">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="ViewOnGoingProjectRequests" asp-route-pageNumber="@(Model.CurrentPage - 1)" asp-route-pageSize="9">
                        Previous
                    </a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="ViewOnGoingProjectRequests" asp-route-pageNumber="@i" asp-route-pageSize="9">
                        @i
                    </a>
                </li>
            }
            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="ViewOnGoingProjectRequests" asp-route-pageNumber="@(Model.CurrentPage + 1)" asp-route-pageSize="9">
                        Next
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>