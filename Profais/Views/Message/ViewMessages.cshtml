@model PaginatedMessagesViewModel

@{
    ViewData["Title"] = "Messages";
}

<div class="container mt-5">
    <h2>Messages for Project @Model.ProjectId</h2>

    <div class="row">
        @foreach (var message in Model.Messages)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <p class="card-text">@message.Description</p>

                        <form asp-action="ViewMessage" method="post">
                            <input type="hidden" name="nameId" value="@message.User.Id" />
                            <input type="hidden" name="projectId" value="@Model.ProjectId" />

                            <button type="submit" class="btn btn-primary">
                                View Message
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", "Message", new { projectId = Model.ProjectId, page = Model.CurrentPage - 1 })">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", "Message", new { projectId = Model.ProjectId, page = i })">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", "Message", new { projectId = Model.ProjectId, page = Model.CurrentPage + 1 })">Next</a>
            </li>
        </ul>
    </nav>
</div>