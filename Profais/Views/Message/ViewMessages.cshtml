@using Profais.Services.ViewModels.Message;
@using Profais.Services.ViewModels.Shared;
@model PagedResult<MessageViewModel>

@{
    ViewData["Title"] = "Message - Paged Messages";
}

<div class="container mt-5">
    @if (Model.Items.Any())
    {
        <h2>
            Messages for Project @(Model.Items.FirstOrDefault()!.ProjectId)
        </h2>
        <div class="row">
            @foreach (MessageViewModel message in Model.Items)
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text">@message.Description</p>

                            <form asp-action="ViewMessage" method="post">
                                <input type="hidden" name="nameId" value="@message.User.Id" />
                                <input type="hidden" name="projectId" value="@message.ProjectId" />

                                <button type="submit" class="btn btn-primary">
                                    View Message
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.HasPreviousPage ? "" : "hidden")">
                    <a class="page-link" asp-action="ViewMessages" asp-route-projectId="@(Model.Items.FirstOrDefault()!.ProjectId)" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="ViewMessages" asp-route-projectId="@(Model.Items.FirstOrDefault()!.ProjectId)" asp-route-page="@i">@i</a>
                    </li>
                }

                <li class="page-item @(Model.HasNextPage ? "" : "hidden")">
                    <a class="page-link" asp-action="ViewMessages" asp-route-projectId="@(Model.Items.FirstOrDefault()!.ProjectId)" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <h2>
            No messages available
        </h2>
    }
</div>