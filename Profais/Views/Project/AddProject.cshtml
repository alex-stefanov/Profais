@using Profais.Services.ViewModels.Project;
@model AddProjectViewModel

@{
    ViewData["Title"] = "Add Project";
}

<h2>@ViewData["Title"]</h2>

<div class="container mt-4">
    <form asp-action="AddProject" method="post">
        <div class="form-group">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="AbsoluteAddress" class="form-label"></label>
            <input asp-for="AbsoluteAddress" class="form-control" />
            <span asp-validation-for="AbsoluteAddress" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Scheme" class="form-label"></label>
            <input asp-for="Scheme" class="form-control" />
            <span asp-validation-for="Scheme" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">
            Submit
        </button>
    </form>
</div>