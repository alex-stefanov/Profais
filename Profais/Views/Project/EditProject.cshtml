@using Profais.Services.ViewModels.Project;
@model EditProjectViewModel

@{
    ViewData["Title"] = "Project - Edit";
}

<div class="container mt-5">
    <h2>
        @ViewData["Title"]
    </h2>

    <form asp-action="EditProject" method="post">
        <div class="form-group">
            <label asp-for="Id" class="form-label"></label>
            <input class="form-control" asp-for="Id" required hidden readonly/>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Title" class="form-label"></label>
            <input class="form-control" asp-for="Title" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Scheme" class="form-label"></label>
            <input asp-for="Scheme" class="form-control" />
            <span asp-validation-for="Scheme" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AbsoluteAddress" class="form-label"></label>
            <input  class="form-control" id="AbsoluteAddress" name="AbsoluteAddress" asp-for="AbsoluteAddress" required />
            <span asp-validation-for="AbsoluteAddress" class="text-danger"></span> 
        </div>

        <div class="form-group">
            <label asp-for="IsCompleted" class="form-label"></label>
            <input type="checkbox" asp-for="IsCompleted" />
            <span asp-validation-for="IsCompleted" class="text-danger"></span> 
        </div>

        <button type="submit" class="btn btn-success mt-3">
            Save Changes
        </button>
    </form>
</div>
