@using Profais.Services.ViewModels.Project;
@model EditProjectViewModel

@{
    ViewData["Title"] = "Project - Edit";
}

<div class="container mt-4">
    <h2>
        @ViewData["Title"]
    </h2>

    <form asp-action="EditProject" asp-controller="Project" method="post">
        <div class="form-group">
            <input asp-for="Id" hidden readonly class="form-control" />
            <span asp-validation-for="Id" class="text-danger" />
        </div>

        <div class="form-group">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger" />
        </div>

        <div class="form-group">
            <label asp-for="Scheme" class="form-label"></label>
            <input asp-for="Scheme" class="form-control" />
            <span asp-validation-for="Scheme" class="text-danger" />
        </div>

        <div class="form-group">
            <label asp-for="AbsoluteAddress" class="form-label"></label>
            <input asp-for="AbsoluteAddress" class="form-control" />
            <span asp-validation-for="AbsoluteAddress" class="text-danger" />
        </div>

        <div class="form-group">
            <label asp-for="IsCompleted" class="form-label"></label>
            <input type="checkbox" asp-for="IsCompleted"/>
            <span asp-validation-for="IsCompleted" class="text-danger" />
        </div>

        <button type="submit" class="btn btn-success mt-3">
            Save Changes
        </button>
    </form>
</div>
