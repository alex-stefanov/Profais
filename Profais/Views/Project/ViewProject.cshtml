@using Profais.Services.ViewModels.Project;
@model ProjectViewModel

@{
    ViewData["Title"] = "Project - Details";
}

<div class="container mt-5">
    <h2>
        @ViewData["Title"]
    </h2>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>
                @Model.Title
            </h3>
        </div>

        <div class="card-body">
            <div class="mb-3">
                <strong>
                    ID:
                </strong>
                <span>
                    @Model.Id
                </span>
            </div>

            <div class="mb-3">
                <strong>
                    Address:
                </strong>
                <span>
                    @Model.AbsoluteAddress
                </span>
            </div>

            <div class="mb-3">
                <strong>
                    Status:
                </strong>
                <span>
                    @if (Model.IsCompleted)
                    {
                        <span class="badge bg-success">
                            Completed
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-warning">
                            In Progress
                        </span>
                    }
                </span>
            </div>

            <div class="mb-3">
                <strong>
                    Scheme:
                </strong>
                <div>
                    @if (!string.IsNullOrEmpty(Model.Scheme))
                    {
                        <a href="@Model.Scheme" target="_blank">
                            <img src="@Model.Scheme" alt="Scheme Image" class="img-fluid rounded" style="max-height: 200px; object-fit: contain;" />
                        </a>
                    }
                    else
                    {
                        <span class="badge bg-secondary">
                            No Scheme Provided
                        </span>
                    }
                </div>
            </div>


            <div class="btn-group" role="group">
                <form method="get" asp-action="ViewTasks" asp-controller="Task" class="d-inline">
                    <input type="hidden" asp-for="Id" name="projectId" />
                    <button type="submit" class="btn btn-primary">
                        See Tasks
                    </button>
                </form>
                @if (!Model.IsCompleted)
                {
                    <form method="get" asp-action="AddTask" asp-controller="Task" class="d-inline">
                        <input type="hidden" asp-for="Id" name="projectId" />
                        <button type="submit" class="btn btn-success">
                            Add Task
                        </button>
                    </form>
                    <form method="get" asp-action="EditProject">
                        <input type="hidden" asp-for="Id" name="projectId" />
                        <button type="submit" class="btn btn-warning">
                            Edit Project
                        </button>
                    </form>  
                    <form method="post" asp-action="DeleteProject">
                        <input type="hidden" asp-for="Id" name="projectId" />
                        <button type="submit" class="btn btn-warning">
                            Delete Project
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>