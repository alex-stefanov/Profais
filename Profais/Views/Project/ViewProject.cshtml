@model Profais.Services.ViewModels.ProjectViewModel
@{
    ViewData["Title"] = "Project Details";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>@Model.Title</h3>
        </div>

        <div class="card-body">
            <div class="mb-3">
                <strong>ID:</strong>
                <span>@Model.Id</span>
            </div>

            <div class="mb-3">
                <strong>Address:</strong>
                <span>@Model.AbsoluteAddress</span>
            </div>

            <div class="mb-3">
                <strong>Status:</strong>
                <span>
                    @if (Model.IsCompleted)

                    {
                        <span class="badge bg-success">Completed</span>
                    }

                    else

                    {
                        <span class="badge bg-warning">In Progress</span>
                    }
                </span>
            </div>

            <div class="mb-3">
                <strong>Scheme:</strong>
                <span>
                    @if (!string.IsNullOrEmpty(Model.Scheme))

                    {
                        <a href="@Model.Scheme" target="_blank" class="badge bg-info">@Model.Scheme</a>
                    }

                    else

                    {
                        <span class="badge bg-secondary">No Scheme Provided</span>
                    }
                </span>
            </div>

            <div class="btn-group" role="group">
                <form method="get" asp-action="ViewTasks" asp-controller="Project" class="d-inline">
                    <input type="hidden" asp-for="Id" name="projectId" />
                    <button type="submit" class="btn btn-primary">
                        See Tasks
                    </button>
                </form>

                <form method="get" asp-action="ViewMessages" asp-controller="Project" class="d-inline">
                    <input type="hidden" asp-for="Id" name="projectId" />
                    <button type="submit" class="btn btn-info">
                        "See Messages"
                    </button>
                </form>

                <form method="get" asp-action="AddTask" asp-controller="Project" class="d-inline">
                    <input type="hidden" asp-for="Id" name="projectId" />
                    <button type="submit" class="btn btn-success">
                        "Add Task"
                    </button>
                </form>
            </div>
        </div>   
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .btn-group {
            margin-top: 15px;
        }

        .badge {
            font-size: 14px;
        }

        .card-footer {
            background-color: #f8f9fa;
        }

                .mb-3 {
                    margin-bottom: 1rem;
                }
    </style>
}