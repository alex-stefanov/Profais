@using Microsoft.AspNetCore.Identity
@inject SignInManager<ProfUser> SignInManager
@inject UserManager<ProfUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" asp-area="Identity" asp-page="/Account/Profile" title="Manage" class="nav-link text-white">
                Hello @UserManager.GetUserName(User)!
            </a>
        </li>

        <li class="nav-item">
            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" class="form-inline">
                <button id="logout" type="submit" class="nav-link btn btn-link text-white border-0">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a id="register" asp-area="Identity" asp-page="/Account/Register" class="nav-link text-white">
                Register
            </a>
        </li>

        <li class="nav-item">
            <a id="login" asp-area="Identity" asp-page="/Account/Login" class="nav-link text-white">
                Login
            </a>
        </li>
    }
</ul>
