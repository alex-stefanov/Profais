@{
    ViewData["Title"] = "Material Panel - Index";
}

<div class="container mt-4">
    <div class="text-center">
        <h2 class="mb-4">
            @ViewData["Title"]
        </h2>

        <form asp-area="Admin" asp-action="ViewAll" asp-controller="MaterialPanel" method="get" class="mb-3">
            <button type="submit" class="btn btn-lg btn-primary" style="width: 250px; height: 80px; font-size: 20px;">
                View All Materials
            </button>
        </form>

        <form asp-area="Admin" asp-action="Register" asp-controller="MaterialPanel" method="get">
            <button type="submit" class="btn btn-lg btn-success" style="width: 250px; height: 80px; font-size: 20px;">
                Register New Material
            </button>
        </form>
    </div>
</div>