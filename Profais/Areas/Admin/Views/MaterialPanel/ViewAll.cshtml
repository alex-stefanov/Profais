@using Profais.Services.ViewModels.Shared;
@using Profais.Services.ViewModels.Material;
@model PagedResult<MaterialViewModel>

@{
    ViewData["Title"] = "Material Panel - View all";
}

<h2>
    @ViewData["Title"]
</h2>

<div class="container mt-4">
    <div class="row">
        @foreach (MaterialViewModel material in Model.Items)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            @material.Name
                        </h5>
                        <p class="card-text">
                            @material.Id
                        </p>
                        <p class="card-text">
                            @material.UsedFor.ToString()
                        </p>
                        <form method="post" asp-action="Delete">
                            <input type="hidden" name="id" />
                            <button type="submit" class="btn btn-warning">
                                Delete Material
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <nav>
        <ul class="pagination justify-content-center">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="ViewAll" asp-route-pageNumber="@(Model.CurrentPage - 1)" asp-route-pageSize="9">Previous</a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="ViewAll" asp-route-pageNumber="@i" asp-route-pageSize="9">@i</a>
                </li>
            }
            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="ViewAll" asp-route-pageNumber="@(Model.CurrentPage + 1)" asp-route-pageSize="9">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>