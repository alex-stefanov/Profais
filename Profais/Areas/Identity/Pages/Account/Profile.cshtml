@page
@using Profais.Areas.Identity.Pages.Account;
@model ProfileModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container">
    <h2>
        @ViewData["Title"]
    </h2>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="FirstName">
                    First Name
                </label>
                <p type="text" class="form-control">
                    @Model.CurrentUser.FirstName
                </p>
            </div>
            <div class="form-group">
                <label for="LastName">
                    Last Name
                </label>
                <p type="text" class="form-control">
                    @Model.CurrentUser.LastName
                </p>
            </div>
            <div class="form-group">
                <label for="Email">
                    Email Address
                </label>
                <p type="email" class="form-control">
                    @Model.CurrentUser.Email
                </p>
            </div>
            <div class="form-group">
                <label for="Roles">Roles</label>
                <ul class="list-group">
                    @foreach (string role in Model.Roles)
                    {
                        <li class="list-group-item">
                            @role
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>